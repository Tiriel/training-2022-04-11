<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
    {% set current_path = app.request.attributes.get('_route') %}
        <header class="navbar navbar-expand-lg navbar-dark bg-black">
            <ul class="navbar-nav me-auto mb-2">
                <li class="nav-item"><a class="nav-link {{ current_path == 'app_default_index' ? 'active' : '' }}" href="{{ path('app_default_index') }}">Home</a></li>
                <li class="nav-item"><a class="nav-link {{ current_path == 'app_default_contact' ? 'active' : '' }}" href="{{ path('app_default_contact') }}">Contact</a></li>
                <li class="nav-item"><a class="nav-link {{ current_path == 'app_book_index' ? 'active' : '' }}" href="{{ path('app_book_index') }}">Book</a></li>
            </ul>
        </header>
        <section class="container-md">
            {% block body %}{% endblock %}
        </section>
    </body>
</html>
