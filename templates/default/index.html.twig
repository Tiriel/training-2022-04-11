{% extends 'base.html.twig' %}

{% block title %}Hello DefaultController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Sensio TV+</h1>
    <div>
        <h3>Latest movies</h3>
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Title</th>
                    <th>Poster</th>
                    <th>Country</th>
                    <th>Released</th>
                    <th>Price</th>
                </tr>
            </thead>
            <tbody>
                {% for movie in movies %}
                    <tr>
                        <td>{{ movie.id }}</td>
                        <td>{{ movie.title }}</td>
                        <td>{{ movie.poster }}</td>
                        <td>{{ movie.country }}</td>
                        <td>{{ movie.released ? movie.released|date('Y-m-d') : '' }}</td>
                        <td>{{ movie.price }}</td>
                    </tr>
                {% else %}
                    <p>No movies in database yet.</p>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
